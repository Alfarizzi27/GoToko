<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/assets/img/logo.png" type="image/x-icon">
    <title>LapakKita</title>
  </head>
  <body>
    <h1>LapakKita</h1>
    <div class="container">
        <div class="row" style="justify-content: center;">
          <div class="col-9" style="display: flex; flex-flow: wrap; position: relative;">
            <%= console.log(result); %>
            <% result.forEach(el => { %>
                <div class="card" style="width: 13rem; height: auto; margin-right: 20px; margin-top: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); border: 1px solid #ddd; cursor: pointer" onclick="location.href='/detail/<%= el.id %>'">
                    <img src="<%= el.imageURL %>" style="height: 230px;" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title" style="font-weight:300; font-size: 16px; margin-bottom: 2px;"><%= el.name %></h5>
                      <p class="card-text" style="font-weight: 600; font-size: 18px; margin-bottom: 2px;"><%= currencyFormat(el.price) %></p>
                      <p style="background-color: #fdb5b5; width: fit-content; padding: 3px; border-radius: 5px; font-size: 11px; font-weight: 500; color: #d22c2c; margin-bottom: 2px;">cashback 20%</p>
                      <p style="font-size: 14px; color: #00000078;"><%= el.Store.address %></p>
                    </div>
                </div>
            <% }) %>
          </div>
        </div>
  </body>
</html>